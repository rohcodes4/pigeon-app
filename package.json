{
  "name": "Pigeon",
  "private": true,
  "version": "1.0.0",
  "description": "Pigeon Desktop App",
  "author": "Rohcodes",
  "type": "module",
  "main": "src/main/electron.cjs",
  "build": {
    "appId": "com.domain.pigeon",
    "productName": "Pigeon",
    "files": [
      "dist/**",
      "src/main/electron.cjs",
      "src/main/preload.js",
      "src/main/discordPreload.cjs",
      "src/main/database/**",
      "src/main/services/**",
      "src/main/security/**",
      "src/main/sync/**",
      "src/main/assets/**"
    ],
    "asarUnpack": [
      "src/main/database/**",
      "src/main/services/**",
      "src/main/security/**",
      "src/main/sync/**"
    ],
    "extraResources": [
      {
        "from": "node_modules/electron/dist/locales",
        "to": "locales"
      }
    ],
    "extraFiles": [
       {
        "from": "src/main/assets/icons/",
        "to": "icons"
      }
    ],
    "directories": {
      "buildResources": "assets/icons"
    },
    "win": {
      "icon": "logo.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        "portable"
      ]
    },
    "mac": {
      "icon": "logo.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "logo.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "scripts": {
    "build:dev": "vite build --mode development",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev": "concurrently \"cross-env VITE_DEV_SERVER_URL=http://localhost:8080 vite\" \"wait-on http://localhost:8080 && electron .\"",
    "build": "vite build && electron-builder --mac --win",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-aspect-ratio": "^1.1.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-collapsible": "^1.1.0",
    "@radix-ui/react-context-menu": "^2.2.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-hover-card": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-menubar": "^1.1.1",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-toggle-group": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@supabase/supabase-js": "^2.50.0",
    "@tanstack/react-query": "^5.56.2",
    "better-sqlite3": "^12.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.6.0",
    "dotenv": "^17.2.2",
    "electron-store": "^10.1.0",
    "embla-carousel-react": "^8.3.0",
    "emoji-picker-react": "^4.13.2",
    "input-otp": "^1.2.4",
    "keytar": "^7.9.0",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.462.0",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-icons": "^5.5.0",
    "react-resizable-panels": "^2.1.3",
    "react-router-dom": "^6.26.2",
    "recharts": "^2.12.7",
    "sonner": "^1.5.0",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^0.9.3",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "lovable-tagger": "^1.1.7",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1",
    "wait-on": "^8.0.5"
  }
}
